
<div class="container">
  <h1 class="my-4"><img src="<%= asset_path 'cake.png' %>" alt="Cake Icon" /> Cake Calculator</h1>
  <%= form_tag cakes_index_path, method: :get, class: 'cake-form' do %>
    <div class="form-group">
      <%= label_tag :recipe, "Recipe" %>
      <%= text_field_tag :recipe, params[:recipe], class: "form-control1", placeholder: "{flour: 500, sugar: 200, eggs: 1}" %>
    </div>
    <div class="form-group">
      <%= label_tag :ingredients, "Ingredients" %>
      <%= text_field_tag :ingredients, params[:ingredients], class: "form-control2", placeholder: "{flour: 1200, sugar: 1200, eggs: 5, milk: 200}" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Calculate", class: "btn-calculate" %>
    </div>
  <% end %>

  <div class="result">
    You can bake <%= @cakes %> <img src="<%= asset_path 'cake2.png' %>", class: 'cake2, alt="Cake Icon" /> cakes.
  </div>
</div>

